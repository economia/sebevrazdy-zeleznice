@import prefixes
@import colors
body
    margin 0px
    line-height 1.3em
    font-family arial, sans-serif
    svg
        position absolute
        top 0px
        left 0px
        path
            fill none
    #flipboards
        position absolute
        top 0px
        right 0px
        width 575px
    .flipboard
        @import flipboard
    .flipboard
        &.toPlace
            left 300px
        &.date
        &.counter
        &.delays
            top 85px
            left auto
            transform-origin 100% 0px
        &.date
            width 399px
            right 302px
            h2
                left 47px
        &.counter
            width 250px
            right 200px
            h2
                left 116px
            .upper
            .lower
                width 150px
            span
                display block
                width @width
                left -110px
                text-align right
        &.delays
            left auto
            right 0px
            width 500px
            h2
                left 120px

