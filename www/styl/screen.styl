@import prefixes
@import colors
body
    margin 0px
    line-height 1.3em
    font-family arial, sans-serif
    svg
        position absolute
        top 0px
        left 0px
        path
            fill none
            &:hover
                stroke red
            &.active
                stroke red
                stroke-width 5px
                fill red

    .flipboard
        position absolute
        top 0px
        right 0px
        width 912px
        height 120px
        .upper
        .lower
        .new
        .old
            position absolute
            left 0px
            width @width
            overflow hidden
        .new
            top 0px
        .old
            bottom 0px
        .new
        .old
            span
                font-size 60px
                color white
                position absolute
                left 0px
                top 45px
        .lower
            .new
            .old
                span
                    top -20px

        .upper
            top 0px

        .lower
            top 60px
            .new
                z-index 1
        .upper
        .lower
            height 60px
            .new
            .old
                width @width
                height @height
        .upper
            .new
                background #050
            .old
                background #500
        .lower
            .new
                background #040
            .old
                background #400
