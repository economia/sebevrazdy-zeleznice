@import prefixes
@import colors
body
    margin 0px
    line-height 1.3em
    font-family arial, sans-serif
    svg
        position absolute
        top 0px
        left 0px
        path
            fill none
    #flipboards
        position absolute
        top 0px
        right 0px
        width 575px
    .flipboard
        @import flipboard
    .flipboard
        &.toPlace
            left 300px
        &.date
        &.counter
        &.delays
            top 60px
            left auto
            transform-origin 100% 0px
        &.date
            width 399px
            right 230px
        &.counter
            width 150px
            right 140px
            span
                display block
                width @width
                left -15px
                text-align right
        &.delays
            left auto
            right 0px
            width 300px

